Plugins:     META (0.3), DevFiles (0.3)
BuildTools:  ocamlbuild
AlphaFeatures: ocamlbuild_more_args

Library redis
  Path: src
  Findlibname: redis
  Pack: true
  Modules: Redis_sync
  InternalModules: S, Utils, Client, Cache, Mutex
  BuildDepends: re.str, uuidm

Flag lwt
  Description: Build the Lwt client
  Default: false

Library redis_lwt
  Build$: flag(lwt)
  Install$: flag(lwt)
  Path: src
  FindlibParent: redis
  Findlibname: lwt
  Modules: Redis_lwt
  InternalModules: S, Utils, Client, Cache, Mutex
  BuildDepends: lwt.unix, lwt

Flag examples
  Description: Build the examples
  Default: false

Executable redis_examples
  Path: examples
  MainIs: examples.ml
  Build$: flag(examples)
  Install: false
  CompiledObject: best
  BuildDepends: threads, core, redis, redis.lwt, lwt.unix, lwt

Executable test
  Path: test
  BuildTools: ocamlbuild
  MainIs: test_sync.ml
  BuildDepends: oUnit, redis
  Install: false
  Build$: flag(tests)

Executable test_lwt
  Path: test
  BuildTools: ocamlbuild
  MainIs: test_lwt.ml
  BuildDepends: lwt.unix, lwt, oUnit, redis, redis.lwt
  Install: false
  Build$: flag(tests) && flag(lwt)

Test main
  Run$: flag(tests)
  Command: $test

Test main_lwt
  Run$: flag(tests) && flag(lwt)
  Command: $test_lwt

Document redis
  Type: ocamlbuild (0.4)
  BuildTools: ocamldoc
  Title: API reference for ocaml-redis
  XOCamlbuildPath: .
  XOCamlbuildExtraArgs:
    "-docflags '-colorize-code -charset utf-8'"
  XOCamlbuildLibraries: redis, redis.lwt